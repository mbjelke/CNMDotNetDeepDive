@model IEnumerable<ResumeProject.Models.Certification>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CertName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CertAuthority)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LicenseNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.From)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.To)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsEternal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CertURL)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CertName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CertAuthority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LicenseNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.From)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEternal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CertURL)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
